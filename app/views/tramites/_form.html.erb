<div class="form-panel">
  <h4 class="mb"><i class="fa fa-angle-right"></i> Form Elements</h4>
  <%= form_for @tramite, url: tramites_url, html: {:class => "form-horizontal style-form"} do |f| %>
      <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Unidad</label>
          <div class="col-sm-10">
            <%= f.text_field :uf, {class: "form-control", placeholder: "ej. 1234567"} %>
          </div>
      </div>
      <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Motivo</label>
          <div class="col-sm-10">
            <%= f.text_field :id_motivo_tr, {class: "form-control", placeholder: "ej. 12"} %>
          </div>
      </div>
      <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Nombre</label>
          <div class="col-sm-10">
            <%= f.text_field :razon_soc, {class: "form-control", placeholder: "ej. ROQUE RABUFFETI"} %>
          </div>
      </div>
      <%= f.submit "Crear", class: "btn btn-theme" %>
  <% end %>
</div>
